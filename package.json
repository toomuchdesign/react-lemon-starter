{
  "name": "react-lemon-starter",
  "version": "0.0.0",
  "description": "Lemon flavoured ReactJS starter kit",
  "main": "index.js",
  "author": "Andrea Carraro <me@andreacarraro.it>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toomuchdesign/react-lemon-starter.git"
  },
  "scripts": {
    "dev": "node generate-envfile.js dev",
    "prod": "node generate-envfile.js prod",
    "clean": "rm -rf build && rm -rf build_server",
    "build": "npm run clean && npm run build:app && npm run build:server",
    "build:app": "webpack --config ./tools/webpack/webpack.config.publish.js",
    "build:server": "BABEL_ENV=node webpack --config ./tools/webpack/webpack.config.ssr.js --env.target server",
    "lint": "eslint . --ext .js --ext .jsx --ignore-path .eslintignore --cache",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "pre-commit": [
      "lint",
      "test"
    ],
    "stats:build": "webpack --profile --json --config ./tools/webpack/webpack.config.publish.js > .stats.json",
    "stats:serve": "npm run stats:build && webpack-bundle-analyzer ./.stats.json ./build",
    "stats:help": "webpack-bundle-analyzer --help",
    "start": "npm run start:dev_server:local",
    "start:dev_server:local": "webpack-dev-server --config ./tools/webpack/webpack.config.server.js --env.mode local",
    "start:dev_server:build": "webpack-dev-server --config ./tools/webpack/webpack.config.server.js --env.mode publish",
    "start:server": "npm run build && npm run serve:ssr",
    "start:server:watch": "npm run build && nodemon -e js,jsx --watch src --watch server --exec \"npm run build:server:ssr && npm run serve:ssr\"",
    "serve:ssr": "node build_server",
    "setup": "npm run setup:npm",
    "setup:npm": "npm prune && npm update && npm install --production",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "version": "git add package.json"
  },
  "engine": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "jest": {
    "automock": false,
    "notify": true,
    "coverageThreshold": {
      "global": {
        "branches": 65,
        "functions": 65,
        "lines": 65,
        "statements": 65
      }
    },
    "coverageDirectory": ".coverage",
    "testRegex": "(\\.spec\\.jsx?$)",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.css$": "<rootDir>/__mocks__/styleMock.js"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFiles": [
      "./tools/jest.setup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/build",
      "<rootDir>/build_server"
    ]
  },
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "dotenv": "^2.0.0",
    "enzyme": "^2.6.0",
    "enzyme-to-json": "^1.4.4",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest": "^19.0.2",
    "nock": "^9.0.2",
    "nodemon": "^1.18.6",
    "pre-commit": "^1.1.3",
    "react-element-to-jsx-string": "^5.0.2",
    "react-hot-loader": "^4.5.0",
    "react-test-renderer": "^15.5.4",
    "redux-mock-store": "^1.2.1",
    "webpack": "^4.29.3",
    "webpack-bundle-analyzer": "^2.2.1",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0",
    "webpack-hot-middleware": "^2.13.1"
  },
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^7.0.1",
    "babel-loader": "^8.0.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.3.2",
    "cheerio": "^1.0.0-rc.2",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "cross-fetch": "^3.0.1",
    "css-loader": "^2.0.0",
    "express": "^4.16.4",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^3.0.0",
    "history": "^3.2.1",
    "html-webpack-plugin": "^3.0.0",
    "immutability-helper": "^2.0.0",
    "keymirror": "^0.1.1",
    "mini-css-extract-plugin": "^0.5.0",
    "path-to-regexp": "^3.0.0",
    "postcss-calc": "^5.3.1",
    "postcss-color-function": "^3.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.0.0",
    "postcss-reporter": "^3.0.0",
    "postcss-smart-import": "^0.5.1",
    "postcss-url": "^5.1.2",
    "prop-types": "^15.5.8",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "sanitize.css": "^5.0.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.0.0",
    "use-named-routes": "^0.3.2",
    "webpack-dotenv-plugin": "^2.0.0",
    "webpack-merge": "^4.0.0",
    "whatwg-fetch": "^2.0.1"
  }
}
